.example-container {
	position:         relative;
	padding:          1.25rem 1.5rem;
	margin:           0.85rem 0;
	background-color: #F0F0F0;
	border-radius:    6px;
	border:           1px solid #DDDDDD;
	line-height:      1.4;
	overflow:         auto;
}

.example-container::before {
	content:   attr(data-name);
	position:  absolute;
	z-index:   3;
	top:       0.25em;
	right:     0.4em;
	font-size: 0.75rem;
	color:     #E96A3B;
}

@media (max-width: 419px) {
	.example-container {
		margin:        0.85rem -1.5rem;
		border-radius: 0;
	}
}